<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true" >
        <shape>
            <gradient
                android:startColor="#FFBF00"
                android:endColor="#FFBF00"
                android:angle="360" />
            <stroke
                android:width="1dp"
                android:color="#4c477e" />
            <corners
                android:radius="15dp" />
          
        </shape>
    </item>

    <item android:state_focused="true" >
        <shape>
            <gradient
                android:endColor="#FFBF00"
                android:startColor="#FFBF00"
                android:angle="360" />
            <stroke
                android:width="1dp"
                android:color="#0eaca6" />
            <corners
                android:radius="15dp" />
          
        </shape>
    </item>

    <item>        
        <shape>
            <gradient
                android:endColor="#FFBF00"
                android:startColor="#FFBF00"
                 
                android:angle="360" />
            <stroke
                android:width="1dp"
                android:color="#FFBF00" />
            <corners
                android:radius="15dp" />
     
        </shape>
    </item>
</selector>
