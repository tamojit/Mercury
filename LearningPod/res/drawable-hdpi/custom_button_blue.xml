<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true" >
        <shape>
            <gradient
                android:startColor="#2dbbe6"
                android:endColor="#2dbbe6"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="#2980b9" />
            <corners
                android:radius="15dp" />
          
        </shape>
    </item>

    <item android:state_focused="true" >
        <shape>
            <gradient
                android:endColor="#2dbbe6"
                android:startColor="#2dbbe6"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="#2980b9" />
            <corners
                android:radius="15dp" />
          
        </shape>
    </item>
    <item android:state_enabled="false">        
        <shape>
            <gradient
                android:endColor="#585858"
                android:startColor="#585858"
                 
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="#1C1C1C" />
            <corners
                android:radius="15dp" />
     
        </shape>
    </item>

    <item>        
        <shape>
            <gradient
                android:endColor="#009fcf"
                android:startColor="#009fcf"
                 
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="#2980b9" />
            <corners
                android:radius="15dp" />
     
        </shape>
    </item>
    
    
</selector>
