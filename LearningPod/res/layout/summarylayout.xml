<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0B243B"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/summarybg"
            android:orientation="horizontal"
            android:weightSum="1" >

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_weight="0.35"
                android:orientation="vertical" >

                <RelativeLayout
                    android:id="@+id/realtiveLayout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" >

                    <ImageView
                        android:id="@+id/percentageiamge"
                        android:layout_width="300dp"
                        android:layout_height="300dp"
                        android:background="@drawable/aliencorrectpercentage" />

                    <ImageView
                        android:id="@+id/star"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginLeft="160dp"
                        android:layout_marginTop="80dp"
                        android:background="@drawable/star"
                        android:visibility="invisible" />

                    <TextView
                        android:id="@+id/correctpercentage"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@+id/percentageiamge"
                        android:layout_alignLeft="@+id/percentageiamge"
                        android:layout_alignRight="@+id/percentageiamge"
                        android:layout_alignTop="@+id/percentageiamge"
                        android:layout_marginLeft="70dp"
                        android:layout_marginTop="40dp"
                        android:gravity="center"
                        android:text="67%"
                        android:textColor="#028199"
                        android:textSize="70sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/myImageViewText1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@+id/percentageiamge"
                        android:layout_alignLeft="@+id/percentageiamge"
                        android:layout_alignRight="@+id/percentageiamge"
                        android:layout_alignTop="@+id/percentageiamge"
                        android:layout_marginLeft="75dp"
                        android:layout_marginTop="160dp"
                        android:gravity="center"
                        android:text="CORRECT"
                        android:textColor="#028199"
                        android:textSize="35sp"
                        android:textStyle="bold" />
                </RelativeLayout>

                <Button
                    android:id="@+id/sendMailBt"
                    android:layout_width="317dp"
                    android:layout_height="45dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="30dp"
                    android:background="@drawable/emailresults" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.65"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/summaryLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="75dp"
                    android:text="Click on the question number to review."
                    android:textColor="#ffffff"
                    android:textSize="22sp" />

                <LinearLayout
                    android:id="@+id/summaryquestioncontainer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_marginLeft="240dp"
                    android:gravity="bottom"
                    android:orientation="horizontal" >

                    <Button
                        android:id="@+id/btnSummaryBack"
                        android:layout_width="110dp"
                        android:layout_height="60dp"
                        android:layout_marginRight="20dp"
                        android:background="@drawable/mapbackbuttonbg"
                        android:text="  BACK"
                        android:textColor="#ffffff"
                        android:textSize="17sp"
                        android:textStyle="bold" />

                    <Button
                        android:id="@+id/btnSummaryMap"
                        android:layout_width="190dp"
                        android:layout_height="60dp"
                        android:background="@drawable/summarymapbutton"
                        android:gravity="left|center_vertical"
                        android:paddingLeft="20dp"
                        android:text="RETURN TO MAP"
                        android:textColor="#ffffff"
                        android:textSize="17sp"
                        android:textStyle="bold" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>