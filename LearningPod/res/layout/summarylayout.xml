<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#0B243B" > 
    
     <LinearLayout android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:orientation="vertical"> 
         
           
           
           <LinearLayout             
	       		android:layout_width="match_parent"
	     		android:layout_height="match_parent"    
			    android:background="@drawable/bg1"
			    android:weightSum="1"
			    android:orientation="horizontal">
               
               	  <LinearLayout 
				        android:layout_width="0dp"
				       	android:layout_weight="0.35"
				        android:layout_height="wrap_content"  
				        android:orientation="vertical"    
				        android:layout_margin="5dp">
				        
               	      <RelativeLayout 
               	          android:id="@+id/realtiveLayout"
               	          android:layout_width="wrap_content"
               	          android:layout_height="wrap_content">
               	      
               	      <ImageView 
               	          android:id="@+id/percentageiamge"
               	          android:layout_width="300dp"
               	          android:layout_height="300dp"
               	          android:background="@drawable/aliencorrectpercentage" />
               	       <ImageView 
               	          android:id="@+id/star"
               	          android:layout_width="40dp"
               	          android:layout_height="40dp"
               	          android:layout_marginLeft="160dp"
               	          android:layout_marginTop="80dp"
               	          android:visibility="invisible"
               	          android:background="@drawable/star" />
               	      
               	      <TextView
						    android:id="@+id/correctpercentage"
						    android:layout_width="wrap_content"
						    android:layout_height="wrap_content"
						    android:layout_alignLeft="@+id/percentageiamge"
						    android:layout_alignTop="@+id/percentageiamge"
						    android:layout_alignRight="@+id/percentageiamge"
						    android:layout_alignBottom="@+id/percentageiamge"						   
						    android:textSize="80sp"
						    android:textStyle="bold"
						    android:gravity="center"
						    android:layout_marginLeft="90dp"
						    android:layout_marginTop="40dp"
						    android:text="57%"
						    android:textColor="#028199" />
               	      
               	      <TextView
						    android:id="@+id/myImageViewText1"
						    android:layout_width="wrap_content"
						    android:layout_height="wrap_content"
						    android:layout_alignLeft="@+id/percentageiamge"
						    android:layout_alignTop="@+id/percentageiamge"
						    android:layout_alignRight="@+id/percentageiamge"
						    android:layout_alignBottom="@+id/percentageiamge"						   
						    android:textSize="30sp"
						    android:textStyle="bold"
						    android:gravity="center"
						    android:layout_marginLeft="90dp"
						    android:layout_marginTop="150dp"
						    android:text="Correct"
						    android:textColor="#028199" />
               	      
               	      </RelativeLayout>
               	      <Button
               				android:id="@+id/sendMailBt"
              				 android:layout_width="wrap_content"
              					 android:layout_height="wrap_content"
               	android:background="@android:color/white"
               android:text="Send Mail" />
               	      
               	  </LinearLayout>
               	   <LinearLayout 
				        android:layout_width="0dp"
				       	android:layout_weight="0.65"
				        android:layout_height="wrap_content"  
				        android:orientation="vertical"  
				        android:layout_margin="5dp">
				        
               	       <TextView 
               	           android:layout_width="wrap_content"
               	           android:layout_height="wrap_content"
               	           android:text="Click on the question number to review."
               	           android:layout_marginTop="75dp"
               	           android:layout_marginBottom="10dp"
               	           android:textColor="#ffffff"
               	           android:textSize="22sp"/>
               	       
               	       <LinearLayout 
               	           android:id = "@+id/summaryquestioncontainer"
               	           android:layout_width="wrap_content"
               	           android:layout_height="wrap_content"
               	           android:orientation="horizontal" >
               	           
               	            
               
               	       </LinearLayout>
               	           
               	       
               	      
               	  </LinearLayout>
               	  
				        
        
        	
               
           </LinearLayout>

           
       
     </LinearLayout>

</LinearLayout>
