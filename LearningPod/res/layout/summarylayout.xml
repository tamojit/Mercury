<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0B243B"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        

             

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/summarybg"
                android:paddingLeft="20dp"
                android:paddingTop="10dp"
                  >
                
                <ImageView
                    android:id="@+id/percentageiamge"
                    android:layout_width="250dp"
                    android:layout_height="250dp"
                    android:background="@drawable/aliencorrectpercentage" />

                <ImageView
                    android:id="@+id/star"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="160dp"
                    android:layout_marginTop="80dp"
                    android:background="@drawable/star"
                    android:visibility="invisible" />

                <TextView
                    android:id="@+id/correctpercentage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/percentageiamge"
                    android:layout_alignLeft="@+id/percentageiamge"
                    android:layout_alignRight="@+id/percentageiamge"
                    android:layout_alignTop="@+id/percentageiamge"
                    android:layout_marginLeft="70dp"
                    android:layout_marginTop="35dp"
                    android:gravity="center"
                    android:text="67%"
                    android:textColor="#0098a3"
                    android:textSize="60sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/summarycorrect"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/percentageiamge"
                    android:layout_alignLeft="@+id/percentageiamge"
                    android:layout_alignRight="@+id/percentageiamge"
                    android:layout_alignTop="@+id/percentageiamge"
                    android:layout_marginLeft="65dp"
                    android:layout_marginTop="145dp"
                    android:gravity="center"
                    android:text="CORRECT"
                    android:textColor="#0098a3"
                    android:textSize="25sp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/sendMailBt"
                    android:layout_width="317dp"
                    android:layout_height="45dp"
                    android:layout_below="@+id/percentageiamge"
                    android:layout_marginLeft="0dp"
                    android:layout_marginTop="40dp"
                    android:background="@drawable/emailresults" />
                
                <RelativeLayout 
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="280dp">
                    
                    <ImageView android:id="@+id/sstar1"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:background="@drawable/shootingstar"
                    android:layout_marginLeft="400dp"
                    android:visibility="gone"/>
                
                 

                <TextView
                    android:id="@+id/summaryLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="85dp"
                    android:text="Click on the question number to review."
                    android:textColor="#ffffff"
                    android:textSize="20sp" />

                <LinearLayout
                    android:id="@+id/summaryquestioncontainer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/summaryLabel"
                    android:orientation="horizontal" >
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_below="@+id/summaryquestioncontainer"
                    android:layout_marginLeft="285dp"
                    android:gravity="bottom"
                    android:orientation="horizontal" >

                    <Button
                        android:id="@+id/btnSummaryBack"
                        android:layout_width="105dp"
                        android:layout_height="60dp"
                        android:layout_marginRight="20dp"
                        android:background="@drawable/mapbackbuttonbg"
                        android:text="  BACK"
                        android:textColor="#ffffff"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <Button
                        android:id="@+id/btnSummaryMap"
                        android:layout_width="211dp"
                        android:layout_height="60dp"
                        android:background="@drawable/summarymapbutton"
                        android:gravity="left|center_vertical"
                        android:paddingLeft="18dp"
                        android:text="RETURN TO MAP"
                        android:textColor="#ffffff"
                        android:textSize="18sp"
                        android:textStyle="bold" />
                </LinearLayout>
                    
                    
                </RelativeLayout>
                
                
            </RelativeLayout>
       
    </LinearLayout>

</LinearLayout>