    android:layout_marginRight="12dp"/>     
         
         <ImageButton 
       android:id = "@+id/help4"
       android:layout_width="35dp"
       android:layout_height="30dp"
       android:layout_marginLeft="25dp"  
       android:paddingTop="15dp"  
       android:layout_marginTop="330dp"		     
       android:background="@drawable/popuphelp2"/>
      
        <TextView
       android:id="@+id/texttitle4"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"             
       android:text="Question/Answer Page"
       android:layout_marginTop="337dp"
       android:layout_marginLeft="4dp"
       android:textStyle="bold"
       android:layout_toRightOf="@+id/help4"       
       android:textColor="@android:color/white"
       android:textSize="16dip" />
       
         <TextView
       android:id="@+id/textdetail4"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"    
       android:layout_below="@+id/help4"         
       android:text="The question-and-answer page contains a multiple choice question and a set of answer choices for that question. Read the question carefully, select an answer choice, and click Submit to get a visual indication of whether you answered the question correctly or not. You will also see a brief explanation of the answer. Click Next to proceed to the next question. Click Back to go to the previous question you practiced.\n\nThe progress indicator on the top right corner helps you keep track of your activity within a planet. It will give you an overview of the number of questions you answered correctly or incorrectly thus far.\n\nClick on Map to go back to the Map Screen."
       android:layout_marginLeft="25dp"
       android:textColor="@android:color/white"
       android:textSize="13dip" />
         
         <View android:layout_width="fill_parent"
    android:layout_height="1dip"
    android:background="#FFFFFF" 
    android:layout_below="@+id/textdetail4"
    android:layout_marginLeft="28dp"
    android:layout_marginTop="10dp"
    android:layout_marginRight="12dp"/> 
     
         <ImageButton 
       android:id = "@+id/help5"
       android:layout_width="35dp"
       android:layout_height="30dp"
       android:layout_marginLeft="25dp"  
       android:paddingTop="15dp"  
       android:layout_marginTop="563dp"		     
       android:background="@drawable/popuphelp1"/>
      
        <TextView
       android:id="@+id/texttitle5"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"             
       android:text="Summary Page"
       android:textStyle="bold"
       android:layout_marginTop="568dp"
       android:paddingLeft="2dp"
       android:layout_toRightOf="@+id/help5"       
       android:textColor="@android:color/white"
       android:textSize="16dip" />
       
         <TextView
       android:id="@+id/textdetail5"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"    
       android:layout_below="@+id/help5"         
       android:text="Once you complete all the questions in a specific planet, you will see a  summary page that indicates the percentage of correct answers. This summary page also allows you to send your results to the email address of your choice.\n\nClick on the question numbers on the summary page to review a planet you have already practiced. Alternatively, click on the Back button on the summary page to see the last question of a particular planet; use the Back and Next buttons to review questions."
       android:layout_marginLeft="25dp"
       android:textColor="@android:color/white"
       android:textSize="13dip" />
        
