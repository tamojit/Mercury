    android:layout_marginRight="20dp"/>
     
 <ScrollView   
      android:id="@+id/ScrollView01" 
      android:layout_marginTop="50dp"
      android:layout_marginLeft="10dp"
      android:layout_marginBottom="36dp"
      android:layout_marginRight="10dp" 
      android:layout_height="wrap_content"   
      android:layout_width="wrap_content">  
    
     <RelativeLayout
            android:layout_width="fill_parent"
	        android:layout_height="fill_parent"
	        android:orientation="vertical" >
            
            <ImageButton 
    		    android:id = "@+id/help1"
    		    android:layout_width="35dp"
    		    android:layout_height="30dp"
    		    android:layout_marginLeft="20dp"  
    		    android:paddingTop="16dp"  		     
    		    android:background="@drawable/popuphelp5"/>
      
        <TextView
       android:id="@+id/texttitle"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"             
       android:text="Getting Started"
       android:paddingLeft="5dp"
       android:paddingTop="3dp"
       android:textStyle="bold"
       android:layout_toRightOf="@+id/help1"       
       android:textColor="@android:color/white"
       android:textSize="16dip" />
       
         <TextView
       android:id="@+id/textdetail"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"    
       android:layout_below="@+id/help1"         
       android:text="Log in with your Google account to start answering questions. We’ll store your practice on your device so you can always resume where you left off."
       android:layout_marginLeft="25dp"
    
       android:textColor="@android:color/white"
       android:textSize="13dip" />
         
       <View android:layout_width="fill_parent"
    android:layout_height="1dip"
    android:background="#FFFFFF" 
    android:layout_below="@+id/textdetail"
    android:layout_marginLeft="28dp"
    android:layout_marginTop="10dp"
    android:layout_marginRight="12dp"/>  
         
         
       <ImageButton 
       android:id = "@+id/help2"
       android:layout_width="33dp"
       android:layout_height="30dp"
       android:layout_marginLeft="25dp"  
       android:paddingTop="15dp"  
       android:layout_marginTop="94dp"		     
       android:background="@drawable/popuphelp3"/>
      
        <TextView
       android:id="@+id/texttitle2"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"             
       android:text="Navigating the Map"
       android:textStyle="bold"
       android:paddingLeft="3dp"
       android:layout_marginTop="99dp"
       android:layout_toRightOf="@+id/help2"       
       android:textColor="@android:color/white"
       android:textSize="16dip" />
       
