       android:layout_marginTop="264dp"
       android:paddingLeft="4dp"
       android:layout_toRightOf="@+id/help3"       
       android:textColor="@android:color/white"
       android:textSize="16dip" />
       
         <TextView
       android:id="@+id/textdetail3"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"    
       android:layout_below="@+id/help3"         
       android:text=""
       android:layout_marginLeft="25dp"
       android:textColor="@android:color/white"
       android:textSize="13dip" />
         
      <View android:layout_width="fill_parent"
    android:layout_height="1dip"
    android:background="#FFFFFF" 
    android:layout_marginTop="10dp"
    android:layout_below="@+id/textdetail3"
    android:layout_marginLeft="28dp"
    android:layout_marginRight="12dp"/>     
         
         <ImageButton 
       android:id = "@+id/help4"
       android:layout_width="35dp"
       android:layout_height="30dp"
       android:layout_marginLeft="25dp"  
       android:paddingTop="15dp"  
       android:layout_marginTop="362dp"		     
       android:background="@drawable/popuphelp2"/>
      
        <TextView
       android:id="@+id/texttitle4"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"             
       android:text="Practicing Questions"
       android:layout_marginTop="367dp"
       android:layout_marginLeft="4dp"
       android:textStyle="bold"
       android:layout_toRightOf="@+id/help4"       
       android:textColor="@android:color/white"
       android:textSize="16dip" />
       
         <TextView
       android:id="@+id/textdetail4"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"    
       android:layout_below="@+id/help4"         
       android:text="Select an answer choice and tap Submit. A green check mark [green check] means you got the answer right and a red x mark [red x mark] means you didn’t. You’ll also get a short explanation.\nTap Next to go to a new question and Back to go to the question you just practiced."
       android:layout_marginLeft="25dp"
       android:textColor="@android:color/white"
       android:textSize="13dip" />
         
         <View android:layout_width="fill_parent"
    android:layout_height="1dip"
