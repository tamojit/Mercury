       android:id="@+id/textdetail2"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"    
       android:layout_below="@+id/help2"         
       android:text="The Map screen displays 15 “planets,” each of which corresponds to a distinct category for fifth grade vocabulary. Each planet contains five questions. Click on a planet to get started and answer questions.\n\nA little building on the planet along with a progress bar indicates that you are practicing within that planet. Once you answer all five questions, you will see a ‘flag’ atop the building that signifies completion."
       android:layout_marginLeft="25dp"
       android:textColor="@android:color/white"
       android:textSize="13dip" 
       />
        
         <View android:layout_width="fill_parent"
    android:layout_height="1dip"
    android:background="#FFFFFF" 
    android:layout_below="@+id/textdetail2"
    android:layout_marginLeft="28dp"
    android:layout_marginTop="10dp"
    android:layout_marginRight="12dp"/>
         
         
        <ImageButton 
       android:id = "@+id/help3"
       android:layout_width="35dp"
       android:layout_height="30dp"
       android:layout_marginLeft="25dp"  
       android:paddingTop="15dp"  
       android:layout_marginTop="260dp"		     
       android:background="@drawable/popuphelp4"/>
      
