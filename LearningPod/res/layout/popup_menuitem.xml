       android:layout_toRightOf="@+id/help1"       
       android:textColor="@android:color/white"
       android:textSize="16dip" />
       
         <TextView
       android:id="@+id/textdetail"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"    
       android:layout_below="@+id/help1"         
       android:text="Log In to the app by selecting a Google Account (email address) that is configured in your device. Once you log in and start practicing questions, your practice history will be stored against your login account."
       android:layout_marginLeft="25dp"
    
       android:textColor="@android:color/white"
       android:textSize="13dip" />
         
       <View android:layout_width="fill_parent"
    android:layout_height="1dip"
    android:background="#FFFFFF" 
    android:layout_below="@+id/textdetail"
    android:layout_marginLeft="28dp"
    android:layout_marginTop="10dp"
    android:layout_marginRight="12dp"/>  
         
         
       <ImageButton 
       android:id = "@+id/help2"
       android:layout_width="33dp"
       android:layout_height="30dp"
       android:layout_marginLeft="25dp"  
       android:paddingTop="15dp"  
       android:layout_marginTop="100dp"		     
       android:background="@drawable/popuphelp3"/>
      
        <TextView
       android:id="@+id/texttitle2"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"             
       android:text="Map Screen"
       android:textStyle="bold"
       android:paddingLeft="3dp"
       android:layout_marginTop="105dp"
       android:layout_toRightOf="@+id/help2"       
       android:textColor="@android:color/white"
       android:textSize="16dip" />
       
