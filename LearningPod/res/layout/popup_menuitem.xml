       android:id="@+id/texttitle3"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"             
       android:text="Word List"
       android:textStyle="bold"
       android:layout_marginTop="264dp"
       android:paddingLeft="4dp"
       android:layout_toRightOf="@+id/help3"       
       android:textColor="@android:color/white"
       android:textSize="16dip" />
       
         <TextView
       android:id="@+id/textdetail3"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"    
       android:layout_below="@+id/help3"         
       android:text="Click on Word List to access a list of grade-appropriate words."
       android:layout_marginLeft="25dp"
       android:textColor="@android:color/white"
       android:textSize="13dip" />
         
      <View android:layout_width="fill_parent"
    android:layout_height="1dip"
    android:background="#FFFFFF" 
    android:layout_marginTop="10dp"
    android:layout_below="@+id/textdetail3"
