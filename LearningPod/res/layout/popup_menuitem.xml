    android:layout_height="1dip"
    android:background="#FFFFFF" 
    android:layout_below="@+id/textdetail5"
    android:layout_marginLeft="28dp"
    android:layout_marginTop="10dp"
    android:layout_marginRight="12dp"/>  
         
